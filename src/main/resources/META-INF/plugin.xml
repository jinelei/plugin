<idea-plugin>
    <id>com.github.jinelei.plugin</id>
    <name>Spirit Framework</name>
    <vendor>jinelei</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.SpiritBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                anchor="left"
                secondary="false"
                factoryClass="com.github.jinelei.plugin.toolWindow.SpiritToolWindowFactory"
                id="SpiritTools"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.jinelei.plugin.listeners.SpiritApplicationActivationListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
    <actions>
        <group id="Halo Tools" text="Halo Tool" popup="true" icon="/icons/detect.png">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="ReplaceInPath"/>
        </group>
        <action id="AnalysisEntityId" class="com.github.jinelei.plugin.actions.AnalysisEntity" text="Scan Fields"
                description="ScanForEntities">
            <add-to-group group-id="PopupMenuActions" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
